<div class="px-5 rounded-lg shadow-lg pt-14 pb-7 border-1 bg-charcoal-gray w-80">
  <div class="flex flex-col justify-center">
    <h2 class="text-xl font-medium text-center text-platinum">Sign In</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: "Login",
                  label_html: { class: "input-label" },
                  placeholder: "email",
                  input_html: { autocomplete: "email",
                                class: "input-field" } %>
      <%= f.input :password,
                  required: false,
                  label_html: { class: "input-label" },
                  placeholder: "password",
                  input_html: { autocomplete: "current-password",
                                class: "input-field" } %>

      <div class="!mt-32">
        <%= f.button :submit, "Log in", class: "submit-button group" %>
      </div>
    <% end %>

    <div class="flex flex-row justify-center">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
