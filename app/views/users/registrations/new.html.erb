<div class="px-5 pb-5 rounded-lg shadow-lg pt-14 border-1 bg-charcoal-gray w-80" data-controller="sign-up-validation">
  <div class="flex flex-col justify-center">
    <h2 class="text-xl font-medium text-center text-platinum">Sign Up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                        html: { class: "space-y-4", data: { turbo: false }}) do |f| %>

      <%= f.input :username,
                  autofocus: true,
                  label: "Username",
                  label_html: { class: "input-label" },
                  placeholder: "username",
                  input_html: { autocomplete: "email",
                                class: "input-field",
                                data: {
                                  action: "input->sign-up-validation#removeValidation"
                                }
                              } %>

      <%= f.input :email,
                  autofocus: true,
                  label: "Email",
                  label_html: { class: "input-label" },
                  placeholder: "email",
                  input_html: { autocomplete: "email",
                                class: "input-field",
                                data: {
                                  action: "input->sign-up-validation#removeValidation"
                                }
                              } %>

      <%= f.input :password,
                  label: "Password",
                  label_html: { class: "input-label" },
                  placeholder: "********",
                  input_html: { autocomplete: "email",
                                class: "input-field",
                                data: {
                                  action: "input->sign-up-validation#removeValidation"
                                  }
                              } %>

      <%= f.input :password_confirmation,
                  label: "Repeat password",
                  label_html: { class: "input-label" },
                  placeholder: "********",
                  input_html: { autocomplete: "email",
                                class: "input-field",
                                data: {
                                  action: "input->sign-up-validation#removeValidation"
                                  }
                              } %>

      <div class="!mt-32">
      <%= f.button :submit, "Sign up", class: "submit-button group" %>
      </div>
    <% end %>

    <div class="flex flex-row justify-center">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
