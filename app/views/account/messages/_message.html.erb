<div class="<%= @current_user ==  message.user ? 'container-current_user relative' : 'container-other_user items-center relative'%>">
  <% unless message.content.blank? %>
      <%= avatar(message.user, "text-base translate-y-4 max-w-[35px] max-h-[35px] mr-1.5 #{@current_user ==  message.user ? 'hidden' : '' }") %>
      <div class="message-box <%= @current_user ==  message.user ? 'message-box-current_user' : 'message-box-other_user'%>">
        <p class="message-text"><%= message.content %></p>
        <span class="px-1 text-sm text-gray-700 bottom-1.5 right-2 text-rhythm-gray translate-y-1/2"><%= DateTime.parse(message.created_at.to_s).strftime("%H:%M") %></span>
      </div>
  <% end %>


  <% if message.image.present? %>
    <%= image_tag message.image.url, class: "w-1/3 rounded-lg" %>
    <span class="message-time <%= @current_user ==  message.user ? 'current-message-label' : 'other-message-label'%>"><%= message_time(message) %></span>
  <% end %>
</div>
