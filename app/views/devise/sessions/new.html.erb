<div class="flex flex-col">
  <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900" >Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "my-8 space-y-6 text-center" }) do |f| %>
    <div class="rounded-md shadow-sm -space-y-px flex flex-col justify-start w-1/2 mx-auto">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label_html: { class: "sr-only" },
                  placeholder: "Пошта",
                  input_html: { autocomplete: "email",
                                class: "appearance-none rounded-none mb-3 relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" } %>
      <%= f.input :password,
                  required: false,
                  label_html: { class: "sr-only" },
                  placeholder: "Пароль",
                  input_html: { autocomplete: "current-password",
                                class: "appearance-none rounded-none mb-3 relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" } %>

      <%= f.input :remember_me, html: { class: "h-4 w-6 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded text-start" },
                                label_html: { class: "ml-2 text-sm text-gray-900" },
                                as: :boolean if devise_mapping.rememberable? %>
      <div class="!mt-3 form-actions">
        <%= f.button :submit, "Log in", class: "group relative w-full flex justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>

  <div class="flex flex-row justify-center">
    <%= render "devise/shared/links" %>
  </div>

</div>
