<header class="pb-6 lg:pb-14">
  <div class="relative md:py-5" data-controller="menu" data-menu-hide-class="hidden">
    <div class="py-4 responsive-container">
      <div class="flex items-center justify-between mx-3 md:m-0">

        <!-- LOGO -->

        <div class="flex items-end">
          <%= link_to root_path, class: "w-1/3" do %>
            <%= inline_svg_tag "chat-logo.svg", class: "w-full fill-sky-600" %>
          <% end %>
        </div>

        <!-- NAVIGATION -->

        <div class="justify-center hidden lg:flex basis-3/5">
          <ul class="flex">
            <li class="header-menu-item">
              <%= link_to "About us", "#", class: "link-transition ocus:active-menu-tab hover:active-menu-tab header-text header-menu-link" %>
            </li>
            <li class="header-menu-item">
              <%= link_to "Price", "#", class: "link-transition focus:active-menu-tab hover:active-menu-tab header-text header-menu-link" %>
            </li>
            <li>
              <%= link_to "Contacts", "#", class: "link-transition focus:active-menu-tab hover:active-menu-tab header-text header-menu-link" %>
            </li>
          </ul>
        </div>

        <div class="relative flex justify-end w-1/3">

          <!-- MOBILE MENU -->

          <div class="inset-y-0 left-0 flex items-center ml-2 lg:hidden" data-action="click->menu#toggleMenu" >
            <%= button_tag type: "button", class: "inline-flex items-center justify-center p-2 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-inset focus:ring-black", aria_expanded: "false" do %>
              <svg class="block w-6 h-6" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 6h16M4 12h16M4 18h16" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
              <svg class="hidden w-6 h-6" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"></svg>
            <% end %>
          </div>

          <!-- BUTTON DONATE -->
          <% unless current_user %>
            <%= link_to "Login", new_user_session_path, type: "button", class: "hidden lg:block py-2" %>
            <%= link_to "Sign up", new_user_registration_path, type: "button", class: "btn-blue hidden lg:block ml-1 xl:ml-6 link-transition" %>
          <% else %>
            <%= link_to "Sign out", destroy_user_session_path, class: "btn-blue hidden lg:block ml-1 xl:ml-6 link-transition", method: :delete %>
          <% end %>
        </div>
      </div>

      <div class="hidden transition-transform duration-700 ease-in-out" data-menu-target="menu">
        <ul class="flex flex-col text-center py-7">
          <li class="mt-5">
            <%= link_to "About us", "#", aria_current: "page", class: "focus:active-menu-tab hover:active-menu-tab header-text header-menu-link" %>
          </li>
          <li class="mt-5">
            <%= link_to "Price", "#", class: "focus:active-menu-tab hover:active-menu-tab header-text header-menu-link" %>
          </li>
          <li class="mt-5">
            <%= link_to "Contacts", "#", class: "focus:active-menu-tab hover:active-menu-tab header-text header-menu-link" %>
          </li>
        </ul>
      </div>

      <div class="flex flex-row justify-center mt-3 lg:hidden">
          <% unless current_user %>
            <%= link_to "Login", new_user_session_path, type: "button", class: "py-2" %>
            <%= link_to "Sign up", new_user_registration_path, type: "button", class: "btn-blue ml-7 link-transition" %>
          <% else %>
            <%= link_to "Sign out", destroy_user_session_path, class: "btn-blue ml-7 link-transition", method: :delete %>
          <% end %>
      </div>
    </div>
  </div>
</header>
